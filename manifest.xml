<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
           
  <Id>a1234567-b123-c123-d123-e12345678901</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>TaskApp</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Task Manager" />
  <Description DefaultValue="Create tasks from emails" />
  <IconUrl DefaultValue="https://img.icons8.com/fluency/32/task.png" />
  <HighResolutionIconUrl DefaultValue="https://img.icons8.com/fluency/64/task.png" />
  <SupportUrl DefaultValue="https://basembahattab.github.io/OutlookTaskManager/Help.html" />
  
  <AppDomains>
    <AppDomain>basembahattab.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://basembahattab.github.io/OutlookTaskManager/" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://basembahattab.github.io/OutlookTaskManager/" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />
          
          <!-- Buttons for READING emails -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                
                <!-- Button 1: Create Task (Read only) -->
                <Control xsi:type="Button" id="msgReadCreateTaskButton">
                  <Label resid="createTaskButtonLabel" />
                  <Supertip>
                    <Title resid="createTaskSuperTipTitle" />
                    <Description resid="createTaskSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="messageReadTaskPaneUrl" />
                  </Action>
                </Control>
                
                <!-- Button 2: Open Tasks (Read mode) -->
                <Control xsi:type="Button" id="msgReadOpenTasksButton">
                  <Label resid="openTasksButtonLabel" />
                  <Supertip>
                    <Title resid="openTasksSuperTipTitle" />
                    <Description resid="openTasksSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="messageReadTaskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Button for COMPOSING emails -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel" />
                
                <!-- Button 2: Open Tasks (Compose mode) -->
                <Control xsi:type="Button" id="msgComposeOpenTasksButton">
                  <Label resid="openTasksButtonLabel" />
                  <Supertip>
                    <Title resid="openTasksSuperTipTitle" />
                    <Description resid="openTasksSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="messageReadTaskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://img.icons8.com/fluency/16/task.png" />
        <bt:Image id="icon32" DefaultValue="https://img.icons8.com/fluency/32/task.png" />
        <bt:Image id="icon80" DefaultValue="https://img.icons8.com/fluency/80/task.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://basembahattab.github.io/OutlookTaskManager/function-file.html" />
        <bt:Url id="messageReadTaskPaneUrl" DefaultValue="https://basembahattab.github.io/OutlookTaskManager/" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Task Manager" />
        <bt:String id="createTaskButtonLabel" DefaultValue="Create Task" />
        <bt:String id="createTaskSuperTipTitle" DefaultValue="Create Task" />
        <bt:String id="openTasksButtonLabel" DefaultValue="Open Tasks" />
        <bt:String id="openTasksSuperTipTitle" DefaultValue="Open Tasks" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="createTaskSuperTipDescription" DefaultValue="Create a task from this email" />
        <bt:String id="openTasksSuperTipDescription" DefaultValue="View and manage your tasks" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>